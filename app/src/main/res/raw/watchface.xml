<?xml version="1.0" encoding="utf-8"?>
<!--
    Mugibow Watch Face - Watch Face Format (WFF) v2
    Compatible with Pixel Watch 2 and other Wear OS 4+ devices
-->
<WatchFace width="450" height="450" clipShape="CIRCLE">

    <!-- ========================================= -->
    <!-- BITMAP FONTS DEFINITION                   -->
    <!-- ========================================= -->
    <BitmapFonts>
        <BitmapFont name="custom_digits">
            <Character name="0" resource="digit_0" width="60" height="100" />
            <Character name="1" resource="digit_1" width="60" height="100" />
            <Character name="2" resource="digit_2" width="60" height="100" />
            <Character name="3" resource="digit_3" width="60" height="100" />
            <Character name="4" resource="digit_4" width="60" height="100" />
            <Character name="5" resource="digit_5" width="60" height="100" />
            <Character name="6" resource="digit_6" width="60" height="100" />
            <Character name="7" resource="digit_7" width="60" height="100" />
            <Character name="8" resource="digit_8" width="60" height="100" />
            <Character name="9" resource="digit_9" width="60" height="100" />
            <Character name=":" resource="digit_colon" width="30" height="100" />
        </BitmapFont>
    </BitmapFonts>

    <!-- ========================================= -->
    <!-- MAIN SCENE                                -->
    <!-- ========================================= -->
    <Scene>

        <!-- BACKGROUND -->
        <PartImage x="0" y="0" width="450" height="450" name="Background">
            <Image resource="background" />
            <Variant mode="AMBIENT" target="alpha" value="128" />
        </PartImage>

        <!-- ===================================== -->
        <!-- TOP: Weather (simple version)         -->
        <!-- ===================================== -->
        <PartText x="125" y="50" width="200" height="50" name="Weather">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="20" color="#87CEEB" />
                <Template>
                    <![CDATA[%dÂ°]]>
                    <Parameter expression="[WEATHER.TEMPERATURE]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="150" />
        </PartText>

        <!-- ===================================== -->
        <!-- CENTER: Digital Clock                 -->
        <!-- ===================================== -->
        <DigitalClock x="75" y="160" width="300" height="100">
            <TimeText
                x="0"
                y="0"
                width="300"
                height="90"
                format="HH:mm"
                hourFormat="SYNC_TO_DEVICE"
                align="CENTER">
                <BitmapFont family="custom_digits" size="90" />
            </TimeText>
            <Variant mode="AMBIENT" target="alpha" value="220" />
        </DigitalClock>

        <!-- Date -->
        <PartText x="125" y="260" width="200" height="30" name="Date">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="22" color="#FFFFFF" />
                <Template>
                    %s %d
                    <Parameter expression="[DAY_OF_WEEK_S]" />
                    <Parameter expression="[DAY]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="150" />
        </PartText>

        <!-- ===================================== -->
        <!-- BOTTOM: Step, Heart, Battery          -->
        <!-- ===================================== -->

        <!-- Step Count -->
        <PartText x="50" y="310" width="100" height="50" name="Steps">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="16" color="#90EE90" />
                <Template>
                    %d
                    <Parameter expression="[STEP_COUNT]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartText>

        <!-- Heart Rate -->
        <PartText x="175" y="310" width="100" height="50" name="Heart">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="16" color="#FF6B6B" />
                <Template>
                    %d bpm
                    <Parameter expression="[HEART_RATE]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartText>

        <!-- Battery -->
        <PartText x="300" y="310" width="100" height="50" name="Battery">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="16" color="#FFD700" />
                <Template>
                    <![CDATA[%d%%]]>
                    <Parameter expression="[BATTERY_PERCENT]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartText>

        <!-- ===================================== -->
        <!-- PROGRESS ARCS                         -->
        <!-- ===================================== -->

        <!-- Step Progress Arc -->
        <PartDraw x="0" y="0" width="450" height="450" name="StepArc">
            <Arc x="15" y="15" width="420" height="420"
                startAngle="140" endAngle="180" direction="CLOCKWISE">
                <Stroke color="#333333" thickness="6" cap="ROUND" />
            </Arc>
            <Arc x="15" y="15" width="420" height="420"
                startAngle="140" direction="CLOCKWISE">
                <Stroke color="#90EE90" thickness="6" cap="ROUND" />
                <Transform target="endAngle" value="140 + ([STEP_COUNT] / 10000.0) * 40" />
            </Arc>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartDraw>

        <!-- Battery Progress Arc -->
        <PartDraw x="0" y="0" width="450" height="450" name="BatteryArc">
            <Arc x="15" y="15" width="420" height="420"
                startAngle="0" endAngle="40" direction="CLOCKWISE">
                <Stroke color="#333333" thickness="6" cap="ROUND" />
            </Arc>
            <Arc x="15" y="15" width="420" height="420"
                startAngle="0" direction="CLOCKWISE">
                <Stroke color="#FFD700" thickness="6" cap="ROUND" />
                <Transform target="endAngle" value="([BATTERY_PERCENT] / 100.0) * 40" />
            </Arc>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartDraw>

    </Scene>

</WatchFace>
