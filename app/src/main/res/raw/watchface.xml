<?xml version="1.0" encoding="utf-8"?>
<!--
    Mugibow Watch Face - Watch Face Format (WFF) v2
    Compatible with Pixel Watch 2 and other Wear OS 4+ devices
-->
<WatchFace width="450" height="450" clipShape="CIRCLE">

    <Scene>

        <!-- BACKGROUND -->
        <PartImage x="0" y="0" width="450" height="450" name="Background">
            <Image resource="background" />
            <Variant mode="AMBIENT" target="alpha" value="100" />
        </PartImage>

        <!-- ===================================== -->
        <!-- TOP: Weather                          -->
        <!-- ===================================== -->
        <PartText x="100" y="55" width="250" height="50" name="Weather">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="32" color="#FFFFFF" />
                <Template>
                    <![CDATA[%dÂ°C]]>
                    <Parameter expression="[WEATHER.TEMPERATURE]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="180" />
        </PartText>

        <!-- ===================================== -->
        <!-- CENTER: Digital Clock (BIG!)          -->
        <!-- ===================================== -->
        <DigitalClock x="25" y="140" width="400" height="130">
            <TimeText
                x="0"
                y="0"
                width="400"
                height="120"
                format="HH:mm"
                hourFormat="SYNC_TO_DEVICE"
                align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="100" color="#FFFFFF" />
            </TimeText>
            <Variant mode="AMBIENT" target="alpha" value="255" />
        </DigitalClock>

        <!-- Date -->
        <PartText x="100" y="265" width="250" height="45" name="Date">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="28" color="#FFFFFF" />
                <Template>
                    %s %d
                    <Parameter expression="[DAY_OF_WEEK_S]" />
                    <Parameter expression="[DAY]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="180" />
        </PartText>

        <!-- ===================================== -->
        <!-- BOTTOM ROW: Step, Heart, Battery      -->
        <!-- ===================================== -->

        <!-- Step Count -->
        <PartText x="30" y="320" width="120" height="70" name="Steps">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="24" color="#90EE90" />
                <Template>
                    %d
                    <Parameter expression="[STEP_COUNT]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartText>

        <!-- Heart Rate -->
        <PartText x="165" y="320" width="120" height="70" name="Heart">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="24" color="#FF6B6B" />
                <Template>
                    %d
                    <Parameter expression="[HEART_RATE]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartText>

        <!-- Battery -->
        <PartText x="300" y="320" width="120" height="70" name="Battery">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="24" color="#FFD700" />
                <Template>
                    <![CDATA[%d%%]]>
                    <Parameter expression="[BATTERY_PERCENT]" />
                </Template>
            </Text>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartText>

        <!-- ===================================== -->
        <!-- PROGRESS ARCS                         -->
        <!-- ===================================== -->

        <!-- Step Progress Arc -->
        <PartDraw x="0" y="0" width="450" height="450" name="StepArc">
            <Arc x="10" y="10" width="430" height="430"
                startAngle="135" endAngle="180" direction="CLOCKWISE">
                <Stroke color="#333333" thickness="10" cap="ROUND" />
            </Arc>
            <Arc x="10" y="10" width="430" height="430"
                startAngle="135" direction="CLOCKWISE">
                <Stroke color="#90EE90" thickness="10" cap="ROUND" />
                <Transform target="endAngle" value="135 + ([STEP_COUNT] / 10000.0) * 45" />
            </Arc>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartDraw>

        <!-- Battery Progress Arc -->
        <PartDraw x="0" y="0" width="450" height="450" name="BatteryArc">
            <Arc x="10" y="10" width="430" height="430"
                startAngle="0" endAngle="45" direction="CLOCKWISE">
                <Stroke color="#333333" thickness="10" cap="ROUND" />
            </Arc>
            <Arc x="10" y="10" width="430" height="430"
                startAngle="0" direction="CLOCKWISE">
                <Stroke color="#FFD700" thickness="10" cap="ROUND" />
                <Transform target="endAngle" value="([BATTERY_PERCENT] / 100.0) * 45" />
            </Arc>
            <Variant mode="AMBIENT" target="alpha" value="0" />
        </PartDraw>

    </Scene>

</WatchFace>
